<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nexhubstudio.backend.mapper.CommonCodeGroupMapper">

    <resultMap id="CommonCodeGroupResultMap" type="com.nexhubstudio.backend.domain.CommonCodeGroup">
        <id property="id" column="id"/>
        <result property="groupCode" column="group_code"/>
        <result property="groupName" column="group_name"/>
        <result property="description" column="description"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="useYn" column="use_yn"/>
        <result property="icon" column="icon"/>
        <result property="colorCode" column="color_code"/>
        <result property="category" column="category"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAll" resultMap="CommonCodeGroupResultMap">
        SELECT * FROM common_code_group
        ORDER BY sort_order, group_code
    </select>

    <select id="findById" resultMap="CommonCodeGroupResultMap">
        SELECT * FROM common_code_group WHERE id = #{id}
    </select>

    <select id="findByGroupCode" resultMap="CommonCodeGroupResultMap">
        SELECT * FROM common_code_group WHERE group_code = #{groupCode}
    </select>

    <insert id="insert" parameterType="com.nexhubstudio.backend.domain.CommonCodeGroup"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO common_code_group (
            group_code, group_name, description, sort_order, use_yn,
            icon, color_code, category, created_by, created_at
        ) VALUES (
            #{groupCode}, #{groupName}, #{description}, #{sortOrder}, #{useYn},
            #{icon}, #{colorCode}, #{category}, #{createdBy}, CURRENT_TIMESTAMP
        )
    </insert>

    <update id="update" parameterType="com.nexhubstudio.backend.domain.CommonCodeGroup">
        UPDATE common_code_group SET
            group_name = #{groupName},
            description = #{description},
            sort_order = #{sortOrder},
            use_yn = #{useYn},
            icon = #{icon},
            color_code = #{colorCode},
            category = #{category},
            updated_by = #{updatedBy},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM common_code_group WHERE id = #{id}
    </delete>

</mapper>
