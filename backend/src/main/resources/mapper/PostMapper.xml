<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nexhubstudio.backend.mapper.PostMapper">

    <resultMap id="PostResultMap" type="Post">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="authorId" column="author_id"/>
        <result property="status" column="status"/>
        <result property="viewCount" column="view_count"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insertPost" parameterType="Post" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO posts (title, content, author_id, status, view_count, created_at)
        VALUES (#{title}, #{content}, #{authorId}, #{status}, #{viewCount}, #{createdAt})
    </insert>

    <update id="updatePost" parameterType="Post">
        UPDATE posts
        SET title = #{title},
            content = #{content},
            status = #{status},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="deletePost" parameterType="long">
        DELETE FROM posts WHERE id = #{id}
    </delete>

    <update id="updatePostStatus">
        UPDATE posts
        SET status = #{status},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <select id="findById" parameterType="long" resultMap="PostResultMap">
        SELECT * FROM posts WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="PostResultMap">
        SELECT * FROM posts ORDER BY created_at DESC
    </select>

    <select id="findByAuthorId" parameterType="string" resultMap="PostResultMap">
        SELECT * FROM posts WHERE author_id = #{authorId} ORDER BY created_at DESC
    </select>

    <select id="findByStatus" parameterType="string" resultMap="PostResultMap">
        SELECT * FROM posts WHERE status = #{status} ORDER BY created_at DESC
    </select>

    <update id="incrementViewCount" parameterType="long">
        UPDATE posts
        SET view_count = view_count + 1
        WHERE id = #{id}
    </update>

</mapper>
