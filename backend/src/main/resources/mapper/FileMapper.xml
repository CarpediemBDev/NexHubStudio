<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nexhubstudio.backend.mapper.FileMapper">

    <resultMap id="FileResultMap" type="File">
        <id property="id" column="id"/>
        <result property="originalName" column="original_name"/>
        <result property="storedName" column="stored_name"/>
        <result property="filePath" column="file_path"/>
        <result property="fileSize" column="file_size"/>
        <result property="contentType" column="content_type"/>
        <result property="uploaderId" column="uploader_id"/>
        <result property="uploadedAt" column="uploaded_at"/>
    </resultMap>

    <insert id="insertFile" parameterType="File" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO files (original_name, stored_name, file_path, file_size, content_type, uploader_id, uploaded_at)
        VALUES (#{originalName}, #{storedName}, #{filePath}, #{fileSize}, #{contentType}, #{uploaderId}, #{uploadedAt})
    </insert>

    <delete id="deleteFile" parameterType="long">
        DELETE FROM files WHERE id = #{id}
    </delete>

    <select id="findById" parameterType="long" resultMap="FileResultMap">
        SELECT * FROM files WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="FileResultMap">
        SELECT * FROM files ORDER BY uploaded_at DESC
    </select>

    <select id="findByUploaderId" parameterType="string" resultMap="FileResultMap">
        SELECT * FROM files WHERE uploader_id = #{uploaderId} ORDER BY uploaded_at DESC
    </select>

</mapper>
